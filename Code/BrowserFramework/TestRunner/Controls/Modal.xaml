<Window x:Class="TestRunner.Controls.Modal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modal" Height="160" Width="400" WindowStartupLocation="CenterOwner" WindowStyle="None" ShowInTaskbar="False" ResizeMode="NoResize" 
        Background="#EE929292">
    <Grid Margin="10">
        <Grid.Background>
            <ImageBrush ImageSource="pack://siteoforigin:,,,/Resources/Splash.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <Border BorderBrush="Black" BorderThickness="2">
            <StackPanel VerticalAlignment="Center" >
                <TextBlock x:Name="modalMessage" VerticalAlignment="Center" Width="300" Margin="10" FontSize="11" FontStyle="Italic" TextWrapping="Wrap">Message</TextBlock>
                <ProgressBar Width="300" Height="23" IsIndeterminate="True" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
