<Window x:Class="TestRunner.Controls.DialogBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="" Height="Auto" Width="300" WindowStyle="ToolWindow" SizeToContent="WidthAndHeight"
        Background="#FF90D2FF" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0">
            <TextBlock x:Name="lblMessage" VerticalAlignment="Center" Width="275" Margin="10" TextWrapping="Wrap">ss</TextBlock>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0">
            <TextBox x:Name="txtBox" VerticalAlignment="Center" Height="25" Width="250"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" Margin="0,10,0,10">
            <Button x:Name="btnOK" Style="{StaticResource ButtonStyle2}" Click="btnOK_Click" VerticalAlignment="Top" Content="OK" Margin="2,2,2,0"/>
            <Button x:Name="btnCancel" Style="{StaticResource ButtonStyle2}" Click="btnCancel_Click" VerticalAlignment="Top" Content="Cancel"/>
        </StackPanel>

    </Grid>
</Window>
