<Window x:Class="TestRunner.AddHost"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Machine" Height="110" Width="300" WindowStyle="ToolWindow"
        Background="#FF90D2FF" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <Label VerticalAlignment="Center">Machine Name :</Label>
            <TextBox x:Name="txtName" VerticalAlignment="Center" Height="25" Width="170"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" Margin="0,0,0,0">
            <Button x:Name="btnOK" Style="{StaticResource ButtonStyle2}" Click="btnOK_Click" VerticalAlignment="Top">OK</Button>
            <Button x:Name="btnCancel" Style="{StaticResource ButtonStyle2}" Click="btnCancel_Click" VerticalAlignment="Top">Cancel</Button>
        </StackPanel>

    </Grid>
</Window>
