<Window x:Class="TestRunner.ClearRowDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirmation" Height="100." Width="300" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <Grid>
        
        <StackPanel HorizontalAlignment="Center">
            <TextBlock Margin="0,10,0,0"> Are you sure you want to clear this row?</TextBlock>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button x:Name="Ok" Content="OK" IsDefault="True" Click="Ok_Click" Width="80"/>
                <Button x:Name="Cancel" Content="Cancel" IsCancel="True" Width="80" Margin="5,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
