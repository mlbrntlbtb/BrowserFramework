                            <ContextMenu Opened="ContextMenu_Opened" Closed="ContextMenu_Closed">
                                <ContextMenu.Style>
                                    <Style TargetType="ContextMenu">
                                        <Setter Property="FontFamily" Value="Calibri"></Setter>
                                    </Style>
                                </ContextMenu.Style>
                                <MenuItem Header="Copy" Click="btnCopySched_Click" Name="mniCopySchedSat" IsEnabled="True"></MenuItem>
                                <MenuItem Header="Paste" Click="btnPasteSched_Click" Name="mniPasteSchedSat" IsEnabled="False"></MenuItem>
                                <Separator />
                                <MenuItem Header="Run Now" Click="mniRunNow_Click" Name="mniRunNowSat" IsEnabled="True"></MenuItem>
                            </ContextMenu>
                        </ListView.ContextMenu>
                    </ListView>
                </DockPanel>
                <DockPanel x:Name="dkSunday" Grid.Column="6" Height="Auto" LastChildFill="True">
                    <!--<Button Background="LightBlue" Style="{StaticResource ButtonStyle2}" Width="Auto" Height="Auto" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Click="btnSetSched_Click" DockPanel.Dock="Bottom">
                        <Image Source="pack://siteoforigin:,,,/Resources/addblue.png" Width="13" Height="13" Margin="2,0"/>
                    </Button>-->
                    <ListView x:Name="lvSunday" ItemsSource="{Binding}"  ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto" Width="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SelectionMode="Single" VirtualizingPanel.IsVirtualizing="False">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="{x:Type ListViewItem}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding RunStatus}" Value="true">
                                            <Setter Property="Background" Value="{StaticResource Gradient1}"/>
                                            <Setter Property="Foreground" Value="Navy"/>
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                            <Setter Property="VerticalContentAlignment" Value="Stretch" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding RunStatus}" Value="false">
                                            <Setter Property="Background" Value="{StaticResource Gradient2}"/>
                                            <Setter Property="Foreground" Value="Gray"/>
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                            <Setter Property="VerticalContentAlignment" Value="Stretch" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Sunday" HeaderContainerStyle="{StaticResource GridViewColumnHeaderStyle1}" Width="{Binding ElementName=lvSunday, Path=ActualWidth}">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <DockPanel x:Name="schedSun">
                                                <DockPanel x:Name="tbSun" HorizontalAlignment="Stretch"  Width="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=ActualWidth}">
                                                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Right" Style="{StaticResource ButtonsExpandable}">
                                                       <Button x:Name="btnMoveUp" Background="LemonChiffon" BorderBrush="LemonChiffon" VerticalContentAlignment="Center" HorizontalAlignment="Right" ToolTip="Move Up" Margin="1,0" Click="btnMoveUp_Click">
                                                            <Button.Template>
                                                                <ControlTemplate>
                                                                    <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                                                                        <Image Source="pack://siteoforigin:,,,/Resources/buttonup.png"  Width="13" Height="13" Margin="2,0" />
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Button.Template>
                                                        </Button>
                                                        <Button x:Name="btnMoveDown" Background="LemonChiffon" BorderBrush="LemonChiffon" VerticalContentAlignment="Center" HorizontalAlignment="Right" ToolTip="Move Down" Margin="1,0" Click="btnMoveDown_Click">
                                                            <Button.Template>
                                                                <ControlTemplate>
                                                                    <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                                                                        <Image Source="pack://siteoforigin:,,,/Resources/buttondown.png"  Width="13" Height="13" Margin="2,0" />
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Button.Template>
                                                        </Button>
                                                        <Button x:Name="btnEditSched" Background="LemonChiffon" BorderBrush="LemonChiffon" VerticalContentAlignment="Center" HorizontalAlignment="Right" ToolTip="Edit" Margin="1,0" Click="btnSetSched_Click">
                                                            <Button.Template>
                                                                <ControlTemplate>
                                                                    <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                                                                        <Image Source="pack://siteoforigin:,,,/Resources/edit.png"  Width="13" Height="13" Margin="2,0" />
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Button.Template>
                                                        </Button>
                                                        <Button x:Name="btnClearSched" Background="LemonChiffon" BorderBrush="LemonChiffon" VerticalContentAlignment="Center" HorizontalAlignment="Right" ToolTip="Remove" Margin="1,0" Click="btnClearSched_Click">
                                                            <Button.Template>
                                                                <ControlTemplate>
                                                                    <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                                                                        <Image Source="pack://siteoforigin:,,,/Resources/eraser.png"  Width="13" Height="13" Margin="2,0" />
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Button.Template>
                                                        </Button>
                                                        <Button x:Name="btnSchedSettings" Background="LemonChiffon" BorderBrush="LemonChiffon" VerticalContentAlignment="Center" ToolTip="Settings" Margin="1,0" Click="btnSchedSettings_Click" >
                                                            <Button.Template>
                                                                <ControlTemplate>
                                                                    <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                                                                        <Image Source="pack://siteoforigin:,,,/Resources/Gear.png" Width="13" Height="13" Margin="2,0"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Button.Template>
                                                        </Button>
                                                        <Button x:Name="btnEmail" Background="LemonChiffon" BorderBrush="LemonChiffon" VerticalContentAlignment="Center" ToolTip="Email" Margin="1,0" Click="btnEmailSettings_Click">
                                                            <Button.Template>
                                                                <ControlTemplate>
                                                                    <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                                                                        <Image Source="pack://siteoforigin:,,,/Resources/envelope.png" Width="13" Height="13" Margin="2,0"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Button.Template>
                                                        </Button>                                                        
                                                    </StackPanel>
                                                    <TextBlock x:Name="txtSuite" Style="{StaticResource TextStyle1}" Text="{Binding TestSuiteDisplay}" HorizontalAlignment="Stretch" TextTrimming="CharacterEllipsis" ToolTip="{Binding msuite}" FontWeight="SemiBold" DockPanel.Dock="Top" TextWrapping="Wrap" MaxHeight="30"/>
                                                    <TextBlock x:Name="txtSched" Style="{StaticResource TextStyle2}" Text="{Binding Time, Converter={StaticResource schedconverter}}" HorizontalAlignment="Stretch" TextTrimming="CharacterEllipsis" ToolTip="{Binding Time}" Visibility="Collapsed"/>
                                                   </DockPanel>
                                                <StackPanel x:Name="addSun" Visibility="Collapsed">
                                                    <Button x:Name="btnSetSched" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" ToolTip="Add New Schedule" Margin="1,0" Click="btnSetSched_Click">
                                                        <Button.Template>
                                                            <ControlTemplate>
                                                                <Border HorizontalAlignment="Stretch" VerticalAlignment="Center" Background="Transparent">
                                                                    <Image Source="pack://siteoforigin:,,,/Resources/addblue.png"  Width="14" Height="14" Margin="2,0" />
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Button.Template>
                                                    </Button>
                                                </StackPanel></DockPanel>
                                            <DataTemplate.Triggers>
                                                <DataTrigger Binding="{Binding Order}" Value="1">
                                                    <Setter TargetName="txtSched" Property="Visibility" Value="Visible"/>
                                                    <Setter TargetName="btnEditSched" Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding TestSuiteRelativePath}" Value="dummy">
                                                    <Setter TargetName="addSun" Property="Visibility" Value="Visible"/>
                                                    <Setter TargetName="tbSun" Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </DataTemplate.Triggers>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                        <ListView.ContextMenu>
                            <ContextMenu Opened="ContextMenu_Opened" Closed="ContextMenu_Closed">
                                <ContextMenu.Style>
                                    <Style TargetType="ContextMenu">
                                        <Setter Property="FontFamily" Value="Calibri"></Setter>
                                    </Style>
                                </ContextMenu.Style>
                                <MenuItem Header="Copy" Click="btnCopySched_Click" Name="mniCopySchedSun" IsEnabled="True"></MenuItem>
                                <MenuItem Header="Paste" Click="btnPasteSched_Click" Name="mniPasteSchedSun" IsEnabled="False"></MenuItem>
                                <Separator />
                                <MenuItem Header="Run Now" Click="mniRunNow_Click" Name="mniRunNowSun"/>
                            </ContextMenu>
                        </ListView.ContextMenu>
                    </ListView>
                </DockPanel>
            </Grid>
            <Grid Grid.Column="1" Grid.Row="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.ColumnSpan="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" Grid.Column="0" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,5,0">
                    <Button x:Name="btnClearAll" Content="Clear All" Style="{StaticResource ButtonStyle2}" Click="btnClearAll_Click"/>
                    <Button x:Name="btnSave" Content="Save" Style="{StaticResource ButtonStyle2}" Click="btnSave_Click"/>
                    <Button x:Name="btnTurnOn" Content="Turn On" Style="{StaticResource ButtonStyle2}" Click="btnTurnOn_Click"/>
                    <!--<Button x:Name="btnTurnOff" Content="Turn Off" Style="{StaticResource ButtonStyle2}" Click="btnTurnOff_Click" Margin="2,5,2,0" Height="20" VerticalAlignment="Top"/>-->
                </StackPanel>
            </Grid>
            <Button x:Name="btnAddHost" Content="{StaticResource AddIcon}" HorizontalAlignment="Left" Margin="115,1,0,0" VerticalAlignment="Top" Width="30" Grid.Row="1" Height="18" Style="{StaticResource ToolbarButtonStyle}" ToolTip="Add" Click="btnAddHost_Click"/>
            <Button x:Name="btnDeleteHost" Content="{StaticResource DeleteIcon}" HorizontalAlignment="Left" Margin="150,1,0,0" VerticalAlignment="Top" Width="30" Grid.Row="1" Height="18" Style="{StaticResource ToolbarButtonStyle}" ToolTip="Delete" Click="btnDeleteHost_Click"/>
            <Button x:Name="btnRefresh" Content="{StaticResource RefreshIcon}" HorizontalAlignment="Left" Margin="185,1,0,0" VerticalAlignment="Top" Width="30" Grid.Row="1" Height="18" Style="{StaticResource ToolbarButtonStyle}" ToolTip="Refresh" Click="btnRefresh_Click"/>
        </Grid>
        <Grid Grid.Row="1">
            <Label x:Name="lblSchedulerStatus" Content="Scheduler in currently running." Background="Bisque" Margin="0,0,0,0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
    