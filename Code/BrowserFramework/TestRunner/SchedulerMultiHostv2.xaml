<Window x:Class="TestRunner.SchedulerMultiHostv2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TestRunner.Common"
        Title="Scheduler" Height="480" Width="1200"
        MinHeight="480" MinWidth="1200"
        StateChanged="Window_StateChanged" Loaded="Window_Loaded" WindowStartupLocation="CenterOwner" Closing="Window_Closing" Closed="Window_Closed">
    <Window.Resources>
        <local:DlkScheduleStringConverter x:Key="schedconverter" />
        <local:DlkIsValidTimeToBoolean x:Key="validtimechecker"/>
    </Window.Resources>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://siteoforigin:,,,/Resources/DeltekBackground.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="225"/>
                <ColumnDefinition Width="220*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Menu Height="23" Name="mnuMain" Width="1271">
                <Menu.Background>
                    <SolidColorBrush />
                </Menu.Background>
                <MenuItem Header="File">
                    <MenuItem Header="Export" Click="ExportSchedule"/>
                    <MenuItem Header="Import" Click="ImportSchedule"/>
                    <Separator />
                    <MenuItem Header="Close" Click="Close"/>
                </MenuItem>
            </Menu>
            <TabControl Grid.Column="0" Grid.Row="1" Margin="5,0" Background="#FF90D2FF">
                <TabItem Header="Test Machines">
                    <TabItem.Background>
                        <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                            <GradientStop Color="#FFF3F3F3" Offset="0"/>
                            <GradientStop Color="#FFEBEBEB" Offset="0.5"/>
                            <GradientStop Color="#FFDDDDDD" Offset="0.5"/>
                            <GradientStop Color="#FF90D2FF" Offset="1"/>
                        </LinearGradientBrush>
                    </TabItem.Background>
                    <ListView x:Name="lstHosts" FontSize="11" SelectionChanged="lstHosts_SelectionChanged" VirtualizingPanel.IsVirtualizing="True">
                        <ListView.Resources>
                            <Style TargetType="GridViewColumnHeader">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </Style>
                        </ListView.Resources>
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="20">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Image Name="imgHost" Width="8" Height="8" Source="pack://siteoforigin:,,,/Resources/online.png"/>
                                            <DataTemplate.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="OFF">
                                                    <Setter TargetName="imgHost" Property="Source" Value="pack://siteoforigin:,,,/Resources/offline.png"/>
                                                </DataTrigger>
                                            </DataTemplate.Triggers>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn DisplayMemberBinding="{Binding Name}" Width="180" />
                            </GridView>
                        </ListView.View>
                        <ListView.GroupStyle>
                            <GroupStyle>
                                <GroupStyle.ContainerStyle>
                                    <Style TargetType="{x:Type GroupItem}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type GroupItem}">
                                                    <Expander IsExpanded="True" Style="{StaticResource StatusGroupExpander}">
                                                        <Expander.Header>
                                                                <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="{Binding Name}" FontWeight="Bold" Foreground="Gray" FontSize="11" VerticalAlignment="Bottom" />
                                                            </StackPanel>
                                                        </Expander.Header>
                                                        <ItemsPresenter/>
                                                    </Expander>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </GroupStyle.ContainerStyle>
                            </GroupStyle>
                        </ListView.GroupStyle>
                        
                    </ListView>
                </TabItem>
            </TabControl>
            <CheckBox x:Name="chkAllowRemote" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" Checked="chkAllowRemote_Checked" Unchecked="chkAllowRemote_Unchecked">Allow  access from remote machines</CheckBox>
            <!--<Button Grid.Column="0" Grid.Row="2" x:Name="Sample" Click="Sample_Click" Margin="0,0,138,0"></Button>-->
            <Grid Grid.Column="1" Grid.Row="1" Width="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <DockPanel x:Name="dkMonday" Grid.Column="0" Height="Auto" LastChildFill="True">
                    <!--<Button Background="LightBlue" Style="{StaticResource ButtonStyle2}" Width="Auto" Height="Auto" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Click="btnSetSched_Click" DockPanel.Dock="Bottom">
                      <Image Source="pack://siteoforigin:,,,/Resources/addblue.png" Width="13" Height="13" Margin="2,0"/>
                    </Button>-->
                    <ListView x:Name="lvMonday" ItemsSource="{Binding}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto" Width="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SelectionMode="Single" VirtualizingPanel.IsVirtualizing="False">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="{x:Type ListViewItem}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding RunStatus}" Value="true">
                                        <Setter Property="Background" Value="{StaticResource Gradient1}"/>
                                        <Setter Property="Foreground" Value="Navy"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                        <Setter Property="VerticalContentAlignment" Value="Stretch" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding RunStatus}" Value="false">
                                        <Setter Property="Background" Value="{StaticResource Gradient2}"/>
                                        <Setter Property="Foreground" Value="Gray"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                        <Setter Property="VerticalContentAlignment" Value="Stretch" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Monday" HeaderContainerStyle="{StaticResource GridViewColumnHeaderStyle1}" Width="{Binding ElementName=lvMonday, Path=ActualWidth}">
                                <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <DockPanel x:Name="schedMon" Margin="0">
                                                <DockPanel x:Name="tbMon" HorizontalAlignment="Stretch"  Width="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=ActualWidth}">
                                                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Right" Style="{StaticResource ButtonsExpandable}">
                                                       <Button x:Name="btnMoveUp" Background="LemonChiffon" BorderBrush="LemonChiffon" VerticalContentAlignment="Center" HorizontalAlignment="Right" ToolTip="Move Up" Margin="1,0" Click="btnMoveUp_Click">
                                                            <Button.Template>
                                                                <ControlTemplate>
                                                                    <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                                                                        <Image Source="pack://siteoforigin:,,,/Resources/buttonup.png"  Width="14" Height="14" Margin="2,0" />
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Button.Template>
                                                        </Button>
                                                        <Button x:Name="btnMoveDown" Background="LemonChiffon" BorderBrush="LemonChiffon" VerticalContentAlignment="Center" HorizontalAlignment="Right" ToolTip="Move Down" Margin="1,0" Click="btnMoveDown_Click">
                                                            <Button.Template>
                                                                <ControlTemplate>
                                                                    <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                                                                        <Image Source="pack://siteoforigin:,,,/Resources/buttondown.png"  Width="14" Height="14" Margin="2,0" />
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Button.Template>
                                                        </Button>
                                                        <Button x:Name="btnEditSched" Background="LemonChiffon" BorderBrush="LemonChiffon" VerticalContentAlignment="Center" HorizontalAlignment="Right" ToolTip="Edit" Margin="1,0" Click="btnSetSched_Click">
                                                            <Button.Template>
                                                                <ControlTemplate>
                                                                    <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                                                                        <Image Source="pack://siteoforigin:,,,/Resources/edit.png"  Width="13" Height="13" Margin="2,0" />
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Button.Template>
                                                        </Button>
                                                        <Button x:Name="btnClearSched" Background="LemonChiffon" BorderBrush="LemonChiffon" VerticalContentAlignment="Center" HorizontalAlignment="Right" ToolTip="Remove" Margin="1,0" Click="btnClearSched_Click">
                                                            <Button.Template>
                                                                <ControlTemplate>
                                                                    <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                                                                        <Image Source="pack://siteoforigin:,,,/Resources/eraser.png"  Width="13" Height="13" Margin="2,0" />
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Button.Template>
                                                        </Button>
                                                        <Button x:Name="btnSchedSettings" Background="LemonChiffon" BorderBrush="LemonChiffon" VerticalContentAlignment="Center" ToolTip="Settings" Margin="1,0" Click="btnSchedSettings_Click" >
                                                            <Button.Template>
                                                                <ControlTemplate>
                                                                    <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                                                                        <Image Source="pack://siteoforigin:,,,/Resources/Gear.png" Width="13" Height="13" Margin="2,0"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Button.Template>
                                                        </Button>
                                                        <Button x:Name="btnEmail" Background="LemonChiffon" BorderBrush="LemonChiffon" VerticalContentAlignment="Center" ToolTip="Email" Margin="1,0" Click="btnEmailSettings_Click">
                                                            <Button.Template>
                                                                <ControlTemplate>
                                                                    <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                                                                        <Image Source="pack://siteoforigin:,,,/Resources/envelope.png" Width="13" Height="13" Margin="2,0"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Button.Template>
                                                        </Button>
                                                    </StackPanel>
                                                    <TextBlock x:Name="txtSuite" Style="{StaticResource TextStyle1}" Text="{Binding TestSuiteDisplay}" HorizontalAlignment="Stretch" TextTrimming="CharacterEllipsis" ToolTip="{Binding msuite}" FontWeight="SemiBold" DockPanel.Dock="Top" TextWrapping="Wrap"  MaxHeight="30" />
                                                    <TextBlock x:Name="txtSched" Style="{StaticResource TextStyle2}" Text="{Binding Time, Converter={StaticResource schedconverter}}" HorizontalAlignment="Stretch" TextTrimming="CharacterEllipsis" ToolTip="{Binding Time}" Visibility="Collapsed"/>
                                                </DockPanel>
                                                <StackPanel x:Name="addMon" Visibility="Collapsed">
                                                    <Button x:Name="btnSetSched" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" ToolTip="Add New Schedule" Margin="1,0" Click="btnSetSched_Click">
                                                        <Button.Template>
                                                            <ControlTemplate>
                                                                <Border HorizontalAlignment="Stretch" VerticalAlignment="Center" Background="Transparent">
                                                                    <Image Source="pack://siteoforigin:,,,/Resources/addblue.png" Height="14" Margin="2,0" />
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Button.Template>
                                                    </Button>
                                                </StackPanel>
                                            </DockPanel>
                                            <DataTemplate.Triggers>
                                                <DataTrigger Binding="{Binding Order}" Value="1">
                                                    <Setter TargetName="txtSched" Property="Visibility" Value="Visible"/>
                                                    <Setter TargetName="btnEditSched" Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding TestSuiteRelativePath}" Value="dummy">
                                                    <Setter TargetName="addMon" Property="Visibility" Value="Visible"/>
                                                    <Setter TargetName="tbMon" Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </DataTemplate.Triggers>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                        <ListView.ContextMenu>
                            <ContextMenu Opened="ContextMenu_Opened" Closed="ContextMenu_Closed">
                                <ContextMenu.Style>
                                    <Style TargetType="ContextMenu">
                                        <Setter Property="FontFamily" Value="Calibri"></Setter>
                                    </Style>
                                </ContextMenu.Style>
                                <MenuItem Header="Copy" Click="btnCopySched_Click" Name="mniCopySchedMon"  IsEnabled="True"></MenuItem>
                                <MenuItem Header="Paste" Click="btnPasteSched_Click" Name="mniPasteSchedMon" IsEnabled="False"></MenuItem>
                                <Separator />
                                <MenuItem Header="Run Now" Click="mniRunNow_Click" Name="mniRunNowMon" IsEnabled="True"></MenuItem>
                            </ContextMenu>
                        </ListView.ContextMenu>
                    </ListView>
                </DockPanel>
                <DockPanel x:Name="dkTuesday" Grid.Column="1" Height="Auto" LastChildFill="True">
                    <!--<Button Background="LightBlue" Style="{StaticResource ButtonStyle2}" Width="Auto" Height="Auto" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Click="btnSetSched_Click" DockPanel.Dock="Bottom">
                        <Image Source="pack://siteoforigin:,,,/Resources/addblue.png" Width="13" Height="13" Margin="2,0"/>
                    </Button>-->
                    <ListView x:Name="lvTuesday" ItemsSource="{Binding}"  Grid.Column="1" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto" Width="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SelectionMode="Single" VirtualizingPanel.IsVirtualizing="False">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="{x:Type ListViewItem}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding RunStatus}" Value="true">
                                            <Setter Property="Background" Value="{StaticResource Gradient1}"/>
                                            <Setter Property="Foreground" Value="Navy"/>
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                            <Setter Property="VerticalContentAlignment" Value="Stretch" />
