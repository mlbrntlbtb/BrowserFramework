                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Button.Template>
                                                        </Button>
                                                        <Button x:Name="btnEditSched" Background="LemonChiffon" BorderBrush="LemonChiffon" VerticalContentAlignment="Center" HorizontalAlignment="Right" ToolTip="Edit" Margin="1,0" Click="btnSetSched_Click">
                                                            <Button.Template>
                                                                <ControlTemplate>
