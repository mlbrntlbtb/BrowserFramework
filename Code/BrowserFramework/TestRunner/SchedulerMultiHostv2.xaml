                                <MenuItem Header="Run Now" Click="mniRunNow_Click" Name="mniRunNowTues" IsEnabled="True"></MenuItem>
                            </ContextMenu>
                        </ListView.ContextMenu>
                    </ListView>
                </DockPanel>
                <DockPanel x:Name="dkWednesday" Grid.Column="2" Height="Auto" LastChildFill="True">
                    <!--<Button Background="LightBlue" Style="{StaticResource ButtonStyle2}" Width="Auto" Height="Auto" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Click="btnSetSched_Click" DockPanel.Dock="Bottom">
                        <Image Source="pack://siteoforigin:,,,/Resources/addblue.png" Width="13" Height="13" Margin="2,0"/>
                    </Button>-->
                    <ListView x:Name="lvWednesday" ItemsSource="{Binding}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto" Width="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SelectionMode="Single" VirtualizingPanel.IsVirtualizing="False">
